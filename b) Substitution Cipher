import java.io.*;
import java.util.*;

public class SubstitutionCipher {
    static Scanner sc = new Scanner(System.in);
    static BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
    
    public static void main(String[] args) throws IOException {
        String plain = "abcdefghijklmnopqrstuvwxyz";
        String cipher = "zyxwvutsrqponmlkjihgfedcba"; // Corrected cipher alphabet
        
        System.out.print("Enter any string (lowercase letters only): ");
        String str = br.readLine().toLowerCase(); // Convert input to lowercase
        
        String encrypted = "";
        for (int i = 0; i < str.length(); i++) {
            char c = str.charAt(i);
            int index = plain.indexOf(c);
            if (index != -1) {
                encrypted += cipher.charAt(index);
            } else {
                encrypted += c; // Preserve non-alphabet characters
            }
        }
        System.out.println("The encrypted data is: " + encrypted);
    }
}

// output:
Enter any string (lowercase letters only): hello world
The encrypted data is: svool dliow
